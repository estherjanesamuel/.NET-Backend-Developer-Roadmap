@page "{id:int}"
@model RazorMvcBasic.Pages.EditModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>

<body>
    <h1>Edit Guestbook Entry @Model.Entry.Id</h1>
    <form action="" method="post">
        <div asp-validation-summary="All"></div>
        <input asp-for="Entry.Id" type="hidden" />
        <input asp-for="Entry.Likes" type="hidden" />
        <div>
            <label asp-for="Entry.Content"></label>
            <div>
                <input asp-for="Entry.Content" />
                <span asp-validation-for="Entry.Content"></span>
                
            </div>
             <label asp-for="Entry.Email"></label>
            <div>
                <input asp-for="Entry.Email" />
                <span asp-validation-for="Entry.Email"></span>
            </div>

        </div>

        <div>
            <button type="submit">Save</button>
        </div>
    </form>
</body>

</html>